<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<RelativeLayout


android:layout_marginTop="50sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20sp"
    android:paddingBottom="20sp"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"

    >


    <TextView
        android:textColor="#000000"
        android:layout_marginBottom="20sp"
        android:textSize="27sp"
        android:textStyle="bold"
        android:id="@+id/paiddetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <View
        android:layout_below="@+id/paiddetail"
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/divider1"
android:gravity="left"
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:textColor="#000000"

        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/divider1"
        android:layout_toRightOf="@+id/amount"
        android:gravity="right"

        android:id="@+id/paiddetailnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <View
        android:layout_below="@id/paiddetailnum"
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_below="@+id/divider2"
        android:gravity="left"
        android:id="@+id/transid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
android:layout_toRightOf="@+id/transid"
        android:layout_below="@+id/divider2"
        android:gravity="right"
        android:id="@+id/transid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <View
        android:layout_below="@+id/transid2"
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
android:layout_below="@+id/divider4"
        android:gravity="left"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_toRightOf="@+id/date"

        android:layout_below="@+id/divider4"
        android:gravity="right"

        android:id="@+id/date2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <View

        android:layout_below="@+id/date2"
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_below="@id/divider5"
        android:gravity="left"
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"

        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <TextView
        android:layout_below="@+id/divider5"
        android:layout_toRightOf="@+id/status"
        android:gravity="right"
        android:textSize="22sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
android:textColor="#ff0000"
        android:id="@+id/status2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
</RelativeLayout>


</android.support.constraint.ConstraintLayout>